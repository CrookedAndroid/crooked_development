cc_binary_host {
    name: "cpp2c",

    defaults: [
        "llvm-build-host-tools-defaults",
    ],

    srcs: [
        "src/Cpp2c.cpp",
        "src/Resources.cpp",
        "src/OutputStreams.cpp",
        "src/CTypeMetadata.cpp",
        "src/CTypeMetadataConverter.cpp",
        "src/CFunctionConverter.cpp",
        "src/ClassMatchHandler.cpp",
        "src/MyASTConsumer.cpp",
        "src/MyFrontendAction.cpp",
        ],

    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
        "-UNDEBUG",
    ],

    cppflags: [
        "-fno-exceptions",
        "-fno-rtti",
        "-std=c++17",
    ],

    target: {
        windows: {
            enabled: false,
        },
    },

    shared_libs: [
        "libLLVM_host",
        "libclang_cxx_host",
        "libc++_host",
    ],

    compile_multilib: "64",
    stl: "none",
}
