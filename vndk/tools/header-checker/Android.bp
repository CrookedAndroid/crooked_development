cc_defaults {
    name: "header-checker-defaults",

    cflags: [
        "-Wall",
        "-Wno-error",
        "-DGOOGLE_PROTOBUF_NO_RTTI",
        "-UNDEBUG",
    ],

    cppflags: [
        "-std=c++14",
        "-fno-rtti",
        "-fno-exceptions",
    ],

    target: {
        windows: {
            enabled: false,
        },
    },
    compile_multilib: "64",
    stl: "none",
}

cc_defaults {
    name: "header-checker-lib-defaults",

    shared_libs: [
        "libprotobuf-cpp-full",
        "libLLVM_host",
        "libclang_host",
        "libc++_host",
    ],
    cppflags: [
        "-std=c++14",
        "-fno-rtti",
        "-fno-exceptions",
    ],

    cflags: [
        "-Wno-unused",
        "-Wno-unused-parameter",
    ],
    target: {
        windows: {
            enabled: false,
        },
    },
    stl: "none",
    compile_multilib: "64",
}

cc_defaults {
    name: "header-abi-linker-lib-defaults",

    static_libs: [
        "libheader-abi-util",
    ],

    shared_libs: [
        "libprotobuf-cpp-full",
        "libLLVM_host",
        "libclang_host",
        "libc++_host",
    ],
    cppflags: [
        "-std=c++14",
        "-fno-rtti",
        "-fno-exceptions",
    ],

    stl: "none",
}

cc_library_static {
    name: "libheader-checker-proto",
    host_supported: true,
    export_include_dirs: ["."],

    srcs: [
        "proto/abi_dump.proto",
        "proto/abi_diff.proto",
    ],

    proto: {
        export_proto_headers: true,
        type: "full",
    },

    cflags: [
        "-Wall",
        "-Werror",
        "-Wcast-qual",
        "-Wno-long-long",
        "-Wno-unused-parameter",
    ],
}

cc_binary_host {
    name: "header-abi-dumper",

    defaults: [
        "header-checker-defaults",
        "header-checker-lib-defaults",
    ],

    srcs: [
        "header-abi-dumper/src/*.cpp",
    ],

    static_libs: [
        "libheader-abi-util",
        "libheader-checker-proto",
    ],
}

cc_binary_host {
    name: "header-abi-linker",

    defaults: [
        "header-checker-defaults",
        "header-abi-linker-lib-defaults",
    ],

    srcs: [
        "header-abi-linker/src/*.cpp",
    ],

    static_libs: [
        "libheader-checker-proto",
    ],
}

cc_binary_host {
    name: "header-abi-diff",

    defaults: [
        "header-checker-defaults",
        "header-abi-linker-lib-defaults",
    ],

    srcs: [
        "header-abi-diff/src/*.cpp",
    ],

    static_libs: [
        "libheader-checker-proto",
    ],
}

cc_binary_host {
    name: "merge-abi-diff",

    defaults: [
        "header-checker-defaults",
        "header-abi-linker-lib-defaults",
    ],

    srcs: [
        "merge-abi-diff/src/*.cpp",
    ],

    static_libs: [
        "libheader-checker-proto",
    ],
}

cc_library_static {
    name: "libheader-abi-util",
    defaults: [
        "header-checker-defaults",
    ],
    host_supported: true,
    export_include_dirs: ["header-abi-util/include"],

    srcs: [
        "header-abi-util/src/*.cpp",
    ],
    static_libs: [
        "libheader-checker-proto",
    ],

    shared_libs: [
        "libprotobuf-cpp-full",
        "libc++_host",
        "libLLVM_host",
    ],

    cflags: [
        "-Wcast-qual",
        "-Wno-long-long",
        "-Wno-unused-parameter",
    ],
}
