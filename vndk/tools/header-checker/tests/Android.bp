cc_library {
    name: "libc_and_cpp",
		vendor_available: true,
		vndk: {
				enabled: true,
		},
    export_include_dirs: ["integration/c_and_cpp/include"],
    srcs: [
        "integration/c_and_cpp/*.cpp",
        "integration/c_and_cpp/*.c"
    ],
}

cc_library {
    name: "libc_and_cpp_whole_static",
		vendor_available: true,
		vndk: {
				enabled: true,
		},
    whole_static_libs: ["libc_and_cpp"],
    export_include_dirs: ["integration/c_and_cpp/include"],
}

cc_library {
    name: "libc_and_cpp_without_Cfunction",
		vendor_available: true,
		vndk: {
				enabled: true,
		},
    srcs: [
		   "integration/c_and_cpp/*.cpp",
		],
    export_include_dirs: ["integration/c_and_cpp/include"],
}

cc_library {
    name: "libc_and_cpp_with_unused_struct",
		vendor_available: true,
		vndk: {
				enabled: true,
		},
    srcs: [
		   "integration/c_and_cpp/*.cpp",
		   "integration/c_and_cpp/*.c",
		],
    export_include_dirs: ["integration/c_and_cpp/include"],
		cflags : [
		   "-DINCLUDE_UNUSED_STRUCTS=1",
		],
}

cc_library {
    name: "libgolden_cpp",
		vendor_available: true,
		vndk: {
				enabled: true,
		},
    srcs: [
		   "integration/cpp/gold/*.cpp",
		],
		cflags : [
       "-DGOLDEN_VTABLE_DIFF=0",
       "-DGOLDEN_MEMBER_DIFF=0",
       "-DGOLDEN_ENUM_EXTENSION=0",
       "-DGOLDEN_ENUM_DIFF=0",
    ],
    export_include_dirs: ["integration/cpp/gold/include"],
}

